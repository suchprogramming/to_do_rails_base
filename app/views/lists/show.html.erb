<% content_for(:title, @list.name) %>

<h1><%= @list.name %></h1>
<h4><%= @list.description %></h4>

<% if @list.tasks.any? %>
  <h4>Current Tasks For listname</h4>

  <ul>
    <% @list.tasks.each do |task| %>
      <li>
        <%= task.description %> |
        <%= link_to "Edit", edit_list_task_path(@list, task) %> |
        <%= link_to "Delete", list_task_path(@list, task),
                              :data => {:confirm => "Are you sure?",
                                        :method => "delete" } %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p> No tasks yet!</p>
<% end %>

<p><%= link_to "Add Task", new_list_task_path(@list) %></p>

<p><%= link_to "Edit" + " " + @list.name, edit_list_path %> </p>
<p><%= link_to "Delete" + " " + @list.name, list_path(@list),
                                            :data => {:confirm => "Are you sure?",
                                                      :method => "delete"}%> </p>

<p><%= link_to "Return to Lists", lists_path %> </p>
